{
  "name": "Phashword",
  "description": "Easy to use password generator",
  "author": "Greizgh",
  "license": "GPL-3.0",
  "version": "2.0.0",
  "scripts": {
    "build:debug": "npm run prepare && webpack --env=dev && npm run copy && npm run zip",
    "build:release": "npm run prepare && webpack --env=prod && npm run copy && npm run zip",
    "test": "NODE_ENV=test karma start",
    "prepare": "mkdir -p ./dist",
    "copy": "cp -r _locales ./dist && cp -r res/icons ./dist/ && cp -r html/* ./dist/ && cp -r css/* ./dist/ && cp manifest.json ./dist",
    "zip": "cd ./dist && zip -r -x\"*.zip\" phashword.xpi .",
    "clean": "rm -rf ./dist/*",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greizgh/Phashword.git"
  },
  "bugs": {
    "url": "https://github.com/greizgh/Phashword/issues"
  },
  "homepage": "https://github.com/greizgh/Phashword#readme",
  "dependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "crypto-js": "^3.1.6",
    "immutable": "^3.8.1",
    "json-loader": "^0.5.4",
    "qrcode.react": "^0.6.1",
    "radium": "^0.18.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "redux": "^3.6.0",
    "tldjs": "^1.6.2",
    "uuid": "^3.0.1",
    "webpack": "^2.3.1"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.35.3",
    "babel-plugin-istanbul": "^4.1.4",
    "chai": "^4.0.1",
    "enzyme": "^2.4.1",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "faker": "^4.1.0",
    "karma": "^1.7.0",
    "karma-chai": "^0.1.0",
    "karma-cli": "^1.0.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "mocha": "^3.4.2",
    "react-addons-test-utils": "^15.3.1"
  }
}
