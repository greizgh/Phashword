{
  "name": "Phashword",
  "description": "Easy to use password generator",
  "author": "Greizgh",
  "license": "GPL-3.0",
  "version": "2.0.0",
  "scripts": {
    "build": "npm run prepare && webpack && npm run copy && npm run zip",
    "test": "karma start",
    "prepare": "mkdir -p ./addon/webextension",
    "copy": "cp -r res/icons ./addon/webextension && cp -r html/* ./addon/webextension && cp -r css/* ./addon/webextension && cp manifest.json ./addon/webextension",
    "zip": "cd ./dist && zip -r -x\"*.zip\" phashword.xpi .",
    "clean": "rm -rf ./dist/*",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greizgh/Phashword.git"
  },
  "bugs": {
    "url": "https://github.com/greizgh/Phashword/issues"
  },
  "homepage": "https://github.com/greizgh/Phashword#readme",
  "dependencies": {
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "crypto-js": "^3.1.6",
    "immutable": "^3.8.1",
    "json-loader": "^0.5.4",
    "qrcode.react": "^0.6.1",
    "radium": "^0.18.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "redux": "^3.6.0",
    "tldjs": "^1.6.2",
    "uuid": "^2.0.2",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.5.2",
    "chai": "^3.5.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.6.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.3.0",
    "faker": "^3.1.0",
    "isparta-loader": "^2.0.0",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-cli": "^1.0.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-sourcemap-loader": "^0.3.7",
