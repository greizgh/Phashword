{
  "manifest_version": 2,
  "name": "Phashword",
  "version": "2.0.0",

  "description": "Easy to use password manager",
  "homepage_url": "https://github.com/greizgh/Phashword",
  "icons": {
    "48": "icons/icon-on.svg",
    "96": "icons/icon-on.svg"
  },

  "applications": {
    "gecko": {
      "id": "jid1-nY3RWh8Fb7qhXw@jetpack",
      "strict_min_version": "50.0"
    }
  },

  "permissions": ["tabs", "storage"],

  "browser_action": {
    "default_icon": "icons/icon-off.svg",
    "default_title": "Phashword",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.bundle.js"]
  },

  "options_ui": {
    "page": "settings.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"]
    }
  ]
}
